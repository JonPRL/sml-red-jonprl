Print PathFunToPair.

Thm RespectPaths : [
  (->
   [ty : (U 0 kan)]
   (-> bool ty)
   (* ty ty))
] by [
  lam ty fun =>
  `(coe 0~>1 [x] (@ ($ PathFunToPair ty) x) fun)
].

Print RespectPaths.

// The choice of path matters, and affects the computation!
Thm ComputeCoercion : [
  (=
   (* bool bool)
   ($ RespectPaths bool (lam [b] b))
   (tuple [proj1 tt] [proj2 ff]))
] by [
  auto
].

