Thm Not : [
  (-> bool bool)
] by [
  lam b =>
  if b then `ff else `tt
].

Print Not.

Thm NotNot : [
  (->
   [b : bool]
   (= bool ($ Not ($ Not b)) b))
] by [
  lam b =>
  // this can be done by auto
  unfold Not;
  if b then (reduce at right; auto) else (reduce at right; auto)
].

Print NotNot.

Thm RespectEquality : [
  (->
   [family : (-> [b : bool] (U 0))]
   [b : bool]
   ($ family b)
   ($ family ($ Not ($ Not b))))
] by [
  lam family b pf =>
  rewrite ($ NotNot b);
  [ `($ family b)
  , use pf
  , auto
  , auto]
].

// extract does not mention NotNot
Print RespectEquality.

Thm EqualityIrrelevant : [
  (=
