Tac QueryGoalType(#t : [exp].tac) = [
  query gl <- goal.
  match gl {
    [a | #jdg{%a true} => (#t %a)]
  }
].

Thm MatchGoal : [ (-> bool bool bool bool bool bool) ] by [
  fresh x, y -> repeat {
    (QueryGoalType [ty] #tac{
      match ty {
        [a, b | (-> [x:%a] (%b x)) => refine fun/intro; [id, auto]]
      }
    })
  };
  
  use y
].

Print MatchGoal.