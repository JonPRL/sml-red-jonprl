tactic QueryGoalType(#t : [exp].tac) = 
  query gl <- concl;
  match gl {
    [a | #jdg{%a true} => (#t %a)]
  }
.

theorem MatchGoal : (-> bool bool bool bool bool bool)  by
  repeat {
    (QueryGoalType [ty] #tac{
      match ty {
        [a b | (-> [x:%a] (%b x)) => refine fun/intro; [id, auto]]
      }
    })
  };
  
  with _ _ y => use y
.

print MatchGoal.
